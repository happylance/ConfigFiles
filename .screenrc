startup_message off
escape `a
ignorecase on

# Make xterm scrolling work properly with screen.
termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@

backtick 1 0 10 $HOME/Documents/scripts/countdown/remain_minutes.sh
hardstatus alwayslastline "%{= kW}%-Lw%{= kG}%n* %t%{-}%+Lw %= %1` %= %c"

register p 'DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )'

bind -c paste_reg p paste p
bindkey "`," command -c paste_reg

bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen -t Vim 1

chdir $HOME/Documents/scripts/countdown
screen -t Countdown 2
screen -t Test 5

chdir
screen -t Man 3
screen -t Home 4

altscreen on
